{
  "name": "LaTeX Dev Container",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "workspaceFolder": "/workspace",
  "runArgs": ["--userns=keep-id"],

  "customizations": {
    "vscode": {
      "extensions": [
        "james-yu.latex-workshop"
      ],
      "settings": {
        "latex-workshop.latex.outDir": "%DIR%",
        "latex-workshop.view.pdf.viewer": "tab"
      }
    }
  }
}
